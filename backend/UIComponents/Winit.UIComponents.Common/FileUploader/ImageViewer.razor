@using Winit.Shared.Models.Common
@inject NavigationManager _navigationManager
@inject IAppConfig _appConfig
@inject IAlertService _alerService


<div>
    @foreach (Modules.FileSys.Model.Classes.FileSys fileSys in Images)
    {

        <div class="row">
            <div class="col-md-4 cls_padd_left">
                <a @onclick="@(()=>OnImageOrPdfClick(fileSys))">

                    <img style="width:25%" src="@(fileSys.FileType==Winit.Modules.Common.Model.Constants.FileTypeConstants.Image?$"{_appConfig.ApiDataBaseUrl }{fileSys.RelativePath}/{fileSys.FileName}":"/Images/pdf.png")" alt="@fileSys.DisplayName" />
                </a>
                @if (IsDeleteRequired)
                {
                    <span @onclick="@(()=>Delete(fileSys))">x</span>
                }
            </div>
        </div>
    }
</div>


@if (ShowImageInPopup)
{
    <div style="width: 100%; height: 100%; display: flex; justify-content: center; align-items: center;">
        <div class="modal fade show" tabindex="-1" style="display: block; width: 80%; height: 80%;">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="close" @onclick="@(()=>ShowImageInPopup=false)">&times;</span>
                </div>
                <div style="display: flex; justify-content: center;">
                    <img src="@PopUpImagePath" style="max-width: 100%; max-height: 100%;" />
                </div>
            </div>
        </div>
    </div>
}