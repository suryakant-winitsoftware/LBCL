@inherits WINITMobile.Pages.Base.BaseComponentBase


<div style="width:100%;float:left;margin:0px 0px;">
    @if (!string.IsNullOrWhiteSpace(ValidationMessage))
    {
        <div class="alert alert-danger">
            <div class="col-md-12">
                <div style="color: red;">@ValidationMessage</div>
            </div>
        </div>
    }
    <div class="card">
        <div class="card-body">
            <div class="cls_cust_information">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 mb-12">
                        <h6 class="cls_copy_adress_span">Mention the Number of Employees</h6>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label class="cls_customer_label">Manager<i class="cls_section_div_purchase2_span">*</i></label>
                        <input class="cls_select2_button"
                               @bind="StoreAdditionalInfoCMI.NoOfManager"
                               autocomplete="off"
                               type="number"
                               placeholder="Enter here" onkeydown="return event.key !== '-';" />
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label class="cls_customer_label">Sales<i class="cls_section_div_purchase2_span">*</i></label>
                        <input class="cls_select2_button"
                               @bind="StoreAdditionalInfoCMI.NoOfSalesTeam"
                               autocomplete="off"
                               type="number"
                               placeholder="Enter here" onkeydown="return event.key !== '-';" />
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label class="cls_customer_label">Commercial<i class="cls_section_div_purchase2_span">*</i></label>
                        <input class="cls_select2_button "
                               @bind="StoreAdditionalInfoCMI.NoOfCommercial"
                               autocomplete="off"
                               type="number"
                               placeholder="Enter here" onkeydown="return event.key !== '-';" />
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label class="cls_customer_label">Service<i class="cls_section_div_purchase2_span">*</i></label>
                        <input class="cls_select2_button"
                               @bind="StoreAdditionalInfoCMI.NoOfService"
                               autocomplete="off"
                               type="number"
                               placeholder="Enter here" onkeydown="return event.key !== '-';" />
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label class="cls_customer_label">Other<i class="cls_section_div_purchase2_span">*</i></label>
                        <input class="cls_select2_button"
                               @bind="StoreAdditionalInfoCMI.NoOfOthers"
                               autocomplete="off"
                               type="number"
                               placeholder="Enter here" onkeydown="return event.key !== '-';" />
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label class="cls_customer_label">Total Employees</label>
                        <input class="cls_select2_button" type="number" value="@TotalEmp" readonly   />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <div class="cls_button_bottom_purchase">
        <button class="cls_button_light" type="submit" @onclick="OnClean">Clear</button>
        <button class="cls_button_blue" type="submit" @onclick="SaveOrUpdate">@ButtonName</button>
</div>

