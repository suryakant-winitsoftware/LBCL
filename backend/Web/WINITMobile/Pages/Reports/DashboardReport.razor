@page "/reports/dashboard"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using WINITMobile.Components.ECharts

<div class="dashboard-container">
    <div class="dashboard-header">
        <h3>Target Vs Achievement</h3>
    </div>

    <div class="dashboard-content">
        @if (isLoading)
        {
            <div class="loading-container">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else
        {
            <div class="chart-container">
                <EChartsComponent Options="@achievementChartOptions" />
            </div>
        }
    </div>
</div>

<style>
    .dashboard-container {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
    }

    .dashboard-header {
        padding: 1rem;
    }

    .dashboard-header h3 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 500;
    }

    .dashboard-content {
        flex: 1;
        width: 100%;
        position: relative;
    }

    .loading-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .chart-container {
        width: 100%;
        height:300px;
        min-height: 300px;
    }

    
</style>