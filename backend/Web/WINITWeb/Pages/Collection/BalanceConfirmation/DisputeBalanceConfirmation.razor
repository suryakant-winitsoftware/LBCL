<div class="cls_section">
    <div class="cls_balance_container">
        <p class="cls_balance_container1_p"> Are You Sure You Want To Dispute This Amount?</p>
    </div>

    <div class="cls_container_div1">
        <div class="cls_balance_container_date">

            <div class="cls_balance_container">
                <label class="cls_balance_container_price1">@FormatNumberInIndianStyle(Convert.ToDecimal(Amount))</label>
                <span class="cls_balance_container_text">Closing Balance</span>
            </div>
            <div class="cls_balance_container">
                <div class="cls_container_div1">
                    <label class="cls_balance_container_date_p1">@DateFormat(Convert.ToDateTime(Date))</label>
                </div>

            </div>
        </div>

    </div>

</div>



@foreach (var items in AddSchemes)
{
    <div class="cls_container_div4">
    <div class="cls_logo_section2">
        <div class="cls_sales_container_outline">
            <div class="cls_section_div_purchase4">
                <label class="cls_section_div_purchase2_label">Select Scheme Name</label>

                <select @bind="@items.SchemeName" class="cls_select2_button">
                            <option>--Select Scheme--</option>
                            <option>Scheme-1</option>
                            <option>Scheme-2</option>
                            <option>Scheme-3</option>
                        </select>
                    
                </div>
            <div class="cls_section_div_purchase4">
                <label class="cls_section_div_purchase2_label">Amount Eligible as per CMI</label>
                <input @bind="@items.EligibleAmount" type="text" class="cls_select2_button" placeholder="Enter Amount" />
                </div>
            <div class="cls_section_div_purchase4">
                <label class="cls_section_div_purchase2_label">Amount less received as per Channel Partner</label>
                <input type="text" @bind="@items.ReceivedAmount" class="cls_select2_button" placeholder="Enter Amount" />
                </div>
                @if (AddSchemes.First() == items)
                {
                    <div class="cls_add_scheme_right2 margin_top">
                    <button class="cls_comman_btn1"  @onclick="AddScheme">Add</button>
                    </div>
                }
                else
                {
                    <div class="cls_add_scheme_right2 margin_top">
                    <button class="cls_balance_button3" @onclick="() => DeleteScheme(items)">Delete</button>
                    </div>
                }
            </div>

            <div class="cls_container_div4" style="border-top:1px solid #777777;">
                <div class="cls_sales_container_outline">

            <div class="cls_text_div">
                <label class="cls_section_div2_span">Description</label>
                <div class="cls_text_div_text">
                    <textarea @bind="@items.Description" type="text" class="cls_text_div_input" placeholder="Enter Amount" />
                    </div>
            </div>
            <div class="cls_file_upload_qps">
                        <label class="cls_file_upload_label">Upload Attachment</label>
                        <input type="file" class="cls_inputt2 cls_file_upload_input" />
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    
}

<div class="cls_button_bottom_purchase">

    <button class="cls_button_light"  @onclick="Cancel">
                Cancel
            </button>

    <button class="cls_button_blue"  @onclick="ConfirmDispute">Confirm Dispute</button>
    
</div>





@if (IsShowPopUp)
{
    <div class="modal fade show" tabindex="-1" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content" style="padding: 10px; margin-left:0%;border-radius: 13px;top: 200px;height: 200px;">
                <div class="modal-header" style="padding:0px;border:0px;">
                    <div class="col-12">
                        <button type="button" class="close w-16 h-16" @onclick="Close">
                            <span aria-hidden="true" style="color:#000000;">&times;</span>
                        </button>
                    </div>
                </div>
                <div class="modal-body" style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100%; padding: 10px;">
                    <div class="cls_place_order">
                        <div class="cls_place_order_top">
                            <div class="cls_place_order_top1" style="position: relative;top: -15px;margin-left: 85px;">
                                <img style="width:72px;" src="/Images/checked1.png" />
                            </div>
                            <div class="cls_place_order_top2">
                                <h6>
                                    Dispute Confirmed Successfully
                                </h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

