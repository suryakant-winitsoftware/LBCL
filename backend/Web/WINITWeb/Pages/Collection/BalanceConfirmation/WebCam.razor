@inject IJSRuntime jsRuntime
<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    .camera-wrapper {
        position: relative;
        width: 330px;
        height: 250px;
        border: 2px dashed gray;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f0f0f0;
    }

    .camera-icon {
        position: absolute;
        z-index: 10;
        background: rgba(255, 255, 255, 0.7);
        border: none;
        padding: 10px;
        cursor: pointer;
        font-size: 24px;
        color: #000;
    }

    .video, .canvas {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        object-fit: cover;
    }

    .recapture-button {
        position: absolute;
        bottom: 10px; /* Adjust as needed */
        right: 10px; /* Adjust as needed */
        background-color: #007bff; /* Change background color as needed */
        color: white; /* Change text color as needed */
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        width: 120px;
        font-size:13px;
    }

    button {
        margin-top: 10px;
        padding: 10px 20px;
        font-size: 16px;
    }

</style>

<div> 
    <div class="camera-wrapper">
        @if (!DisableCam)
        {
            <button class="camera-icon" @onclick="StartCamera">
                <i class="fa fa-camera"></i> @Camera
            </button>
        }
        <video id="video" class="video" autoplay></video>
        <canvas id="canvas" class="canvas"></canvas>
        @if (IsReCapture)
        {
            <button class="recapture-button" @onclick="ReCaptureImage">
                Re-Capture
            </button>
        }
        @if (IsCapture)
        {
            <button class="recapture-button" @onclick="CaptureImage">
                Capture
            </button>
        }
    </div>
</div>