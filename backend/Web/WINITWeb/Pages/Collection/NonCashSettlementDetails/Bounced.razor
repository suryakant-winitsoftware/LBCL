            <label class="form-control">@ChequeNo</label>
        </div>

        <div class="mud-item" style="flex-basis: calc(25% - 10px); margin-right: 10px;">
            @Localizer["date"]
            <label class="form-control">@CommonFunctions.GetDateTimeInFormat(ChequeDate)</label>
        </div>
        <div style="margin-bottom: 80px;"></div>
        <div class="mud-item" style="flex-basis: calc(25% - 10px); margin-right: 10px;">
            @Localizer["amount"]
            <label class="form-control">@Amount</label>
        </div>
        <div class="mud-item" style="flex-basis: calc(25% - 10px); margin-right: 10px;">
            @Localizer["status"]
            <label class="form-control">@Status</label>
        </div>

        <div class="mud-item" style="flex-basis: calc(25% - 10px); margin-right: 10px;">
            @Localizer["comments"]
            <label class="form-control">@Comments</label>
        </div>
    </div>
</MudPaper>




