@page "/pending"
@using System.Net.Http.Json;

@inject HttpClient httpClient;
@using Newtonsoft.Json;
@inject IJSRuntime JSRuntime;
@inject NavigationManager _NavigationManager;
@inject Winit.Modules.CollectionModule.BL.Interfaces.IPendingPaymentViewModel _pendingPaymentViewModel
@inherits WinIt.Pages.Base.BaseComponentBase

<style>
    /* Add margin to the MudItem components for side spacing */
    .mud-item {
        margin-right: 5px; /* Adjust the spacing as needed */
    }

        /* Apply margin to the last MudItem in each row to avoid extra spacing */
        .mud-item:nth-child(2n) {
            margin-right: 0;
        }

    .custom-mudfield {
        font-size: 12px; /* Adjust font size as needed */
        padding: 20px;
    }

</style>


@if (IsInitialised)
{
    <MudPaper Elevation="4" Class="py-8 px-10">
        <h6>.</h6>
        <div style="display: flex; flex-wrap: wrap;">
            <div class="mud-item" style="flex-basis: calc(25% - 10px); margin-right: 10px;">
                <input class="form-control" placeholder=@Localizer["bank_name"] type="text" @bind="@bank.FirstOrDefault().BankUID"></input>
            </div>

            <div class="mud-item" style="flex-basis: calc(25% - 10px); margin-right: 10px;">
                <input class="form-control" placeholder=@Localizer["branch_name"] type="text" @bind="@bank.FirstOrDefault().Branch"></input>
            </div>

            <div class="mud-item" style="flex-basis: calc(25% - 10px); margin-right: 10px;">
                <input class="form-control" placeholder=@Localizer["branch_name"] type="text" @bind="@bank.FirstOrDefault().ChequeNo"></input>
            </div>

            <div class="mud-item" style="flex-basis: calc(25% - 10px); margin-right: 10px;">
                @Localizer["date"]
                <label class="form-control">@CommonFunctions.GetDateTimeInFormat(bank.FirstOrDefault().ChequeDate)</label>
            </div>
            <div style="margin-bottom: 80px;"></div>
            <div class="mud-item" style="flex-basis: calc(25% - 10px); margin-right: 10px;">
                @Localizer["status"]
                <label class="form-control">@bank.FirstOrDefault().Status</label>
            </div>

            <div class="mud-item" style="flex-basis: calc(25% - 10px); margin-right: 10px;">
                @Localizer["amount"]
                <label class="form-control">@Amount</label>
            </div>

            <div class="mud-item" style="flex-basis: calc(25% - 10px); margin-right: 10px;">
                @Localizer["comments"]<span style="color:red">*</span>
                <input class="form-control" placeholder=@Localizer["enter_comments"] type="text" @bind="sampletext"></input>
            </div>
        </div>
    </MudPaper>

    <div style="margin-bottom: 80px;"></div>

    <input type="button" class="design" value=@Localizer["settle"] style="background-color: #19298B;color: white;" @onclick='((e) => Clicked("Approve"))' />

    <input type="button" class="design" value=@Localizer["reject"] style="background-color: #19298B;color: white;" @onclick='((e) => Clicked("Reject"))' />

    <input type="button" class="design" value="Update" style="background-color: #19298B;color: white;" @onclick='((e) => UpdateFields())' />
}



