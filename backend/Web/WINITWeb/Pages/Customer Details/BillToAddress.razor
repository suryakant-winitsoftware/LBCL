                    <label style="font-weight: bold;">Country</label>
                    <span></span>
                    </div>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <label style="font-weight: bold;">State</label>
                    <span></span>
                    </div> *@
                        @*   <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <label style="font-weight: bold;">Branch</label>
                    <span></span>
                    </div> *@
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Shop & Est Act / Municipal Act Reg No</label>
                            <input class="form-control "
                                   autocomplete="off"
                                   type="text"
                                   placeholder="Enter here"
                                   @bind="SelectedAddress.MuncipalRegNo" />

                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">ESIC Reg No</label>
                            <input class="form-control"
                                   autocomplete="off"
                                   type="text"
                                   placeholder="Enter here"
                                   @bind="SelectedAddress.ESICRegNo" />

                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">PF Registration No</label>
                            <input class="form-control "
                                   autocomplete="off"
                                   type="text"
                                   placeholder="Enter here"
                                   @bind="SelectedAddress.PFRegNo" />

                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <div class="cls_btn_y_n" style="margin-top:30px;">
                                <input type="checkbox" class="" @bind="SelectedAddress.IsDefault">
                                <label>IsPrimary</label>
                            </div>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">States<i class="cls_section_div_purchase2_span">*</i></label>
                            <Winit.UIComponents.Common.CustomControls.DropDown DataSource="StateselectionItems.OrderBy(item => item.Label.ToLower()).ToList()"
                                                                               IsButtonVisible="true"
                                                                               Title="State"
                                                                               IsSearchable="true" OnSelect="StateSelection" />
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">City<i class="cls_section_div_purchase2_span">*</i></label>
                            <Winit.UIComponents.Common.CustomControls.DropDown DataSource="CityselectionItems.OrderBy(item => item.Label.ToLower()).ToList()"
                                                                               IsButtonVisible="true"
                                                                               Title="City"
                                                                               IsSearchable="true" OnSelect="CitySelection" />
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Locality<i class="cls_section_div_purchase2_span">*</i></label>
                            <input class="form-control "
                                   autocomplete="off"
                                   type="text"
                                   placeholder="Enter Locality here"
                                   @bind="SelectedAddress.Locality" />

                        </div>
                        @* <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Locality<i class="cls_section_div_purchase2_span">*</i></label>
                            <Winit.UIComponents.Common.CustomControls.DropDown DataSource="LocalityselectionItems.OrderBy(item => item.Label.ToLower()).ToList()"
                                                                               IsButtonVisible="true"
                                                                               Title="Locality"
                                                                               IsSearchable="true" OnSelect="LocalitySelection" />
                        </div> *@
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Pincode<i class="cls_section_div_purchase2_span">*</i></label>
                            <Winit.UIComponents.Common.CustomControls.DropDown DataSource="PinCodeselectionItems.OrderBy(item => item.Label.ToLower()).ToList()"
                                                                               IsButtonVisible="true"
                                                                               Title="Pincode"
                                                                               IsSearchable="true" OnSelect="PinCodeSelection" />
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Branch<i class="cls_section_div_purchase2_span">*</i></label>
                            <Winit.UIComponents.Common.CustomControls.DropDown DataSource="BranchselectionItems.OrderBy(item => item.Label.ToLower()).ToList()"
                                                                               IsButtonVisible="true"
                                                                               Title="Branch"
                                                                               IsSearchable="true" OnSelect="BranchSelection" />
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Organisation Unit<i class="cls_section_div_purchase2_span">*</i></label>
                            <Winit.UIComponents.Common.CustomControls.DropDown DataSource="OUselectionItems.OrderBy(item => item.Label.ToLower()).ToList()"
                                                                               IsButtonVisible="true"
                                                                               Title="Organisation Unit"
                                                                               IsSearchable="true" OnSelect="OUSelection" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 d-flex justify-content-center">
                <button class="cls_comman_sec_btn mr-2" type="submit" @onclick="OnClean">Clear</button>
                <button class="cls_comman_btn" type="submit" @onclick="SaveOrUpdate">@ButtonName</button>
            </div>
        </div>
        <div style="width:100%;float:left;margin:10px 0px;">
            <div class="card">
                <div class="card-body">
                    <button class="cls_comman_btn" style="margin-bottom:15px;" type="submit" @onclick="GetAllBillToAddress">Show All Bill To Address</button>

                    @if (IsShowAllBillToAddress && Addresses != null)
                    {
                        <Winit.UIComponents.Web.Table.TableGridView Columns="DataGridColumns" DataSource="Addresses" />
                    }
                </div>
            </div>
        </div>
    </div>
}
