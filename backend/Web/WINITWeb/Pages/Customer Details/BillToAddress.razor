@inherits WinIt.Pages.Base.BaseComponentBase
@inject Winit.Modules.Distributor.Model.Interfaces.IDistributorToggle toggle

@if (IsInitialised)
{
    <div style="width:100%;float:left;margin:0px 0px;">
        @if (!string.IsNullOrWhiteSpace(ValidationMessage))
        {
            <div class="alert alert-danger">
                <div class="col-md-12">
                    <div style="color: red;">@ValidationMessage</div>
                </div>
            </div>
        }
        <div class="card">
            <div class="card-body">
                <div class="cls_cust_information">
                    <div class="row">
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-2">
                            <div class="cls_copy_adress">
                                <input type="checkbox" @bind="IsChecked">
                                <span>Copy Address From GST</span>
                            </div>
                        </div>
                       

                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 mb-12">
                            <h6>Address of Registered office/Firm</h6>
                        </div>

                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Address 1<i class="cls_section_div_purchase2_span">*</i></label>
                            <textarea autocomplete="off" class="form-control" placeholder="Enter here" @bind="SelectedAddress.Line1" rows="3"></textarea>
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Address 2</label>
                            <textarea autocomplete="off" class="form-control" placeholder="Enter here" @bind="SelectedAddress.Line2" rows="3"></textarea>
                        </div>
                       @*  <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
