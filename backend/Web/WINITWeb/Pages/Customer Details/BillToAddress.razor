                        </div> *@
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Gender</label>
                            <Winit.UIComponents.Common.CustomControls.DropDown DataSource="GenderselectionItems"
                                                                               IsButtonVisible="true"
                                                                               Title="Gender"
                                                                               IsSearchable="true" OnSelect="GenderSelection" />
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;"> Name<i class="cls_section_div_purchase2_span">*</i></label>
                            <input @ref="BillToAddressInput" class="form-control"
                                   autocomplete="off"
                                   type="text"
                                   placeholder="Enter here"
                                   @bind="SelectedAddress.Name" />
                            <div class="invalid-feedback">
                            </div>
                        </div>
                        @if (SelectedAddress.Line4 == "Female")
                        {
                            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                                <label style="font-weight: bold;">Husband Name</label>
                                <input class="form-control"
                                       autocomplete="off"
                                       type="text"
                                       placeholder="Enter here"
                                       @bind="SelectedAddress.HusbandName" />

                            </div>
                        }
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Father Name</label>
                            <input class="form-control"
                                   autocomplete="off"
                                   type="text"
                                   placeholder="Enter here"
                                   @bind="SelectedAddress.FatherName" />
                            <div class="invalid-feedback">
                            </div>
                        </div>

                        @* <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
