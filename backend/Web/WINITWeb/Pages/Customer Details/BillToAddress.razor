                            <input class="form-control"
                                   autocomplete="off"
                                   type="text"
                                   placeholder="Enter here"
                                   @bind="SelectedAddress.ZipCode" />
                            <div class="invalid-feedback">@PinCodeValidationMessage</div>


                        </div> *@
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Email<i class="cls_section_div_purchase2_span">*</i></label>
                            <input class="form-control "
                                   autocomplete="off"
                                   type="text"
                                   placeholder="Enter here"
                                   @bind="SelectedAddress.Email" />

                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Mobile Number 1<i class="cls_section_div_purchase2_span">*</i></label>
                            <input class="form-control "
                                   autocomplete="off"
                                   type="number"
                                   placeholder="Enter here"
                                   @bind="SelectedAddress.Mobile1"
                                   @oninput="ValidateMobileNumber" />
                            <div class="invalid-feedback" style="display: @(string.IsNullOrEmpty(MobilevalidationMessage) ? "none" : "block")">
                                @MobilevalidationMessage
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Mobile Number 2</label>
                            <input class="form-control "
                                   autocomplete="off"
                                   type="text"
                                   placeholder="Enter here"
                                   @bind="SelectedAddress.Mobile2"
                                   oninput="this.value = this.value.replace(/[^0-9]/g, '')" />

                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">Aadhar Number<i class="cls_section_div_purchase2_span">*</i></label>
                            <input class="form-control "
                                   autocomplete="off"
                                   type="text"
                                   placeholder="Enter here"
                                   @bind="SelectedAddress.AADHAR"
                                   @oninput="ValidateaadharNumber" />
                            <div class="invalid-feedback" style="display: @(string.IsNullOrEmpty(AadharNumbervalidationMessage) ? "none" : "block")">
                                @AadharNumbervalidationMessage
                            </div>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <label style="font-weight: bold;">GST Number</label>
                            <input class="form-control "
                                   autocomplete="off"
                                   type="text"
                                   placeholder="Enter here"
                                   @bind="SelectedAddress.GSTNo" disabled />

                        </div>
                        @*  <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <label style="font-weight: bold;">sales Office</label>
                    <input class="form-control "
                    autocomplete="off"
                    type="text"
                    placeholder="Enter here"
                    @bind="SelectedAddress.SalesOffice" />

                    </div> *@
