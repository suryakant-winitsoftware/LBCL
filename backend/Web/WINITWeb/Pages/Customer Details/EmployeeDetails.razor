@inherits WinIt.Pages.Base.BaseComponentBase

<div style="width:100%;float:left;margin:0px 0px;">
    @if (!string.IsNullOrWhiteSpace(ValidationMessage))
    {
        <div class="alert alert-danger">
            <div class="col-md-12">
                <div style="color: red;">@ValidationMessage</div>
            </div>
        </div>
    }
    <div class="card">
        <div class="card-body">
            <div class="cls_cust_information">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 mb-12">
                        <h6 ><b>Mention the Number of Employees</b></h6>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label style="font-weight: bold;">Manager<i class="cls_section_div_purchase2_span">*</i></label>
                        <input class="form-control"
                               @bind="StoreAdditionalInfoCMI.NoOfManager"
                               autocomplete="off"
                               type="number"
                               placeholder="Enter here" onkeydown="return event.key !== '-';" />
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label style="font-weight: bold;">Sales<i class="cls_section_div_purchase2_span">*</i></label>
                        <input class="form-control"
                               @bind="StoreAdditionalInfoCMI.NoOfSalesTeam"
                               autocomplete="off"
                               type="number"
                               placeholder="Enter here" onkeydown="return event.key !== '-';" />
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label style="font-weight: bold;">Commercial<i class="cls_section_div_purchase2_span">*</i></label>
                        <input class="form-control "
                               @bind="StoreAdditionalInfoCMI.NoOfCommercial"
                               autocomplete="off"
                               type="number"
                               placeholder="Enter here" onkeydown="return event.key !== '-';" />
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label style="font-weight: bold;">Service<i class="cls_section_div_purchase2_span">*</i></label>
                        <input class="form-control"
                               @bind="StoreAdditionalInfoCMI.NoOfService"
                               autocomplete="off"
                               type="number"
                               placeholder="Enter here" onkeydown="return event.key !== '-';" />
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label style="font-weight: bold;">Other<i class="cls_section_div_purchase2_span">*</i></label>
                        <input class="form-control"
                               @bind="StoreAdditionalInfoCMI.NoOfOthers"
                               autocomplete="off"
                               type="number"
                               placeholder="Enter here" onkeydown="return event.key !== '-';" />
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                        <label style="font-weight: bold;">Total Employees</label>
                        <input class="form-control" type="number" value="@TotalEmp" readonly   />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="width:100%;float:left;margin:10px 0px;">
    <div class="col-12 d-flex justify-content-center">
        <button class="cls_comman_sec_btn mr-2" type="submit" @onclick="OnClean">Clear</button>
        <button class="cls_comman_btn" type="submit" @onclick="SaveOrUpdate">@ButtonName</button>
    </div>
</div>

